<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="{{ asset('assets/css/style.css')}}" type="text/css" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div id="header">
            <h1> Vehiculos App </h1>
            <ul id="menu">
            {% if app.user %}
                <!--<li> <a href="{{ path('vehiculos')}}"> Inicio </a> </li>-->
                <li> <a href="{{ path('vehiculos')}}"> Mis Vehiculos </a> </li>
                <li> <a href="{{ path('new_vehiculo')}}"> Ingresar Vehiculo </a> </li>
                <li class="right"> <a href=""> {{ app.user.usuario }} </a> </li>
                <li class="right"> <a href="{{ path('logout')}}"> Cerrar Sesion </a> </li>
            {% else %}                    
                    <!-- <li> <a href="{{ path('register')}}"> Registro </a> </li> -->
                    <li> <a href="{{ path('login')}}"> Login </a> </li>
            {% endif %}
            </ul>
        </div>

        <div class="clearfix"></div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
